{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "types": ["node", "jest", "hardhat"],
    "baseUrl": "."
  },
  "include": ["src/**/*", "test/**/*", "hardhat.config.ts", "typechain-types/**/*"],
  "exclude": ["node_modules"]
}
